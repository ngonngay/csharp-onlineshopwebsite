@{
    Layout = "_IframeLayout";
}
@model List<ProductImageViewModel>
<main>
    <div class="container-fluid mt-4">
        <div class="container-fluid d-inline-flex justify-content-center mb-3"> <h2>Page Tittle</h2></div>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item "><a asp-action="Detail" asp-controller="Products" asp-route-id="@ViewBag.ProductId"> Chi Tiểt Sản Phẩm </a></li>
            <li class="breadcrumb-item active">Tùy chỉnh ảnh sản phẩm</li>
        </ol>
        <div class="card mb-4 mt-2">
            <div class="card-header">
                <i class="fa fa-list mr-1"></i>
                Quản lí ảnh
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <input type="text" data-id="@ViewBag.ProductId" id="productId" hidden />
                    <table class="table table-bordered" width="100%" cellspacing="0" style="background-color:white;color:black" id="manageImage">
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts{
    <script src="/js/manageImage.js"></script>
    <script>
        var manageImageAction = new ManageImageAction();
        manageImageAction.initialize();
    </script>
}