<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Shop</title>

    <!-- Favicon -->
    <link href="/Client/img/favicon.ico" rel="icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400|Source+Code+Pro:700,900&display=swap" rel="stylesheet">

    <!-- CSS Libraries -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    @*app css*@
    @*<link rel="stylesheet" href="~/css/site.css" />*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="/Client/lib/slick/slick.css" rel="stylesheet">
    <link href="/Client/lib/slick/slick-theme.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/Client/css/style.css" rel="stylesheet">
    <link href="/Client/css/site.css" rel="stylesheet" />
    @await RenderSectionAsync("Css", required: false)
</head>
<body class="sb-nav-fixed">
    <header>
        <!-- Top bar Start -->
        <div class="top-bar">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6">
                        <i class="fa fa-envelope"></i>
                        project.contact.vtc@gmail.com
                    </div>
                    <div class="col-sm-6">
                        <i class="fa fa-phone-alt"></i>
                        0333-020-842
                    </div>
                </div>
            </div>
        </div>
        <!-- Top bar End -->
        <!-- Nav Bar Start -->
        <div class="nav">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-md bg-dark navbar-dark">
                    <a href="#" class="navbar-brand">MENU</a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto">
                            <a asp-controller="HomePage" asp-action="ListProduct" class="nav-item nav-link">Sản Phẩm</a>
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Danh mục</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="HomePage" asp-action="ListProduct" asp-route-listType="bestSale"><i class="fa fa-shopping-bag"></i>Sản phẩm HOT</a>
                                    <a class="dropdown-item" asp-controller="HomePage" asp-action="ListProduct" asp-route-listType="View"><i class=" fa far fa-star"></i>Sản Phẩm Xem Nhiều</a>
                                    <a class="dropdown-item" asp-controller="HomePage" asp-action="ListProduct" asp-route-listType="New"><i class="fa fa-plus-square"></i>Sản phẩm mới</a>
                                    <a class="dropdown-item" asp-controller="HomePage" asp-action="ListProduct" asp-route-categoryId="-2"><i class="fa fa-female"></i>Váy</a>
                                    <a class="dropdown-item" asp-controller="HomePage" asp-action="ListProduct" asp-route-categoryId="-3"><i class="fas fa fa-male"></i>Street Style</a>
                                    <a class="dropdown-item" asp-controller="HomePage" asp-action="ListProduct" asp-route-categoryId="-4"><i class="fa fa-tshirt"></i>T-Shirt</a>
                                    <a class="dropdown-item" asp-controller="HomePage" asp-action="ListProduct" asp-route-categoryId="-1"><i class="fa fa-mobile-alt"></i>Jean</a>
                                </div>
                            </div>
                        </div>
                        @await Html.PartialAsync("_LoginPartial")

                    </div>
                </nav>
            </div>
        </div>
        <!-- Nav Bar End -->
        <!-- Bottom Bar Start -->
        <div class="bottom-bar">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-md-3 ">
                        <a href="/">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="212" height="53" viewBox="0 0 212 53">
                                <defs>
                                    <style type="text/css">
                                        .cls-1 {
                                            clip-path: url(#clip-Custom_Size_1);
                                        }

                                        .cls-2 {
                                            fill: #707070;
                                            font-size: 30px;
                                            font-family: ImprintMT-Shadow, Imprint MT Shadow;
                                        }

                                        .cls-3 {
                                            fill: #fff;
                                        }
                                    </style>
                                    <clipPath id="clip-Custom_Size_1">
                                        <rect width="212" height="53" />
                                    </clipPath>
                                </defs>
                                <g id="Custom_Size_1" data-name="Custom Size – 1" class="cls-1">
                                    <rect class="cls-3" width="212" height="53" />
                                    <text id="Yandere.online" class="cls-2" transform="translate(9 37)"><tspan x="0" y="0">Yandere.online</tspan></text>
                                </g>
                            </svg>
                        </a>

                    </div>
                    <div class="col-md-5 ml-3">
                        <form action="/HomePage/ListProduct" method="get">
                            <div class="search">
                                <input type="text" placeholder="Tìm Kiếm" name="keyword">
                                <button type="submit"><i class="fa fa-search"></i></button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-3">
                        <div class="user">
                            <a href="wishlist.html" class="btn wishlist">
                                <i class="fa fa-heart"></i>
                                <span>(0)</span>
                            </a>
                            <a asp-controller="Cart" asp-action="Index" class="btn cart">
                                <i class="fa fa-shopping-cart"></i>
                                <span id="lbl_number_of_items">(0)</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Bottom Bar End -->
    </header>

    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="footer footer-fixed">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="footer-widget">
                        <h2>Liên Hệ Cửa Hàng</h2>
                        <div class="contact-info">
                            <p><i class="fa fa-map-marker"></i>18 Tam Trinh, Hai Bà Trưng</p>
                            <p><i class="fa fa-envelope"></i>project.contact.vtc@gmail.com</p>
                            <p><i class="fa fa-phone"></i>+123-456-7890</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="footer-widget">
                        <h2>Theo Dõi Chúng Tôi</h2>
                        <div class="contact-info">
                            <div class="social">
                                <a href=""><i class="fab fa-twitter"></i></a>
                                <a href=""><i class="fab fa-facebook-f"></i></a>
                                <a href=""><i class="fab fa-linkedin-in"></i></a>
                                <a href=""><i class="fab fa-instagram"></i></a>
                                <a href=""><i class="fab fa-youtube"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="footer-widget">
                        <h2>Cửa Hàng</h2>
                        <ul>
                            <li><a href="#">Về Chúng Tôi</a></li>
                            <li><a href="#">Chính Sách</a></li>
                            <li><a href="#">Điều Khoản Sử Dụng</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
                    <div class="footer-widget">
                        <h2>Thông tin thanh toán</h2>
                        <ul>
                            <li><a href="#">Chính Sách Thanh Toán</a></li>
                            <li><a href="#">Chính Sách Vận Chuyển</a></li>
                            <li><a href="#">Chính Sách Hoàn Trả</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="row payment align-items-center">
                <div class="col-md-6">
                    <div class="payment-method">
                        <h2>Thanh toán:</h2>
                        <img src="/Client/img/payment-method.png" alt="Payment Method" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="payment-security">
                        <h2>Bảo hộ bởi:</h2>
                        <img src="/Client/img/godaddy.svg" alt="Payment Security" />
                        <img src="/Client/img/norton.svg" alt="Payment Security" />
                        <img src="/Client/img/ssl.svg" alt="Payment Security" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Footer Bottom Start -->
    <div class="footer-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-6 copyright">
                    <p>Copyright &copy; <a href="/">eShop</a>. Bản Quyền Đã Được Bảo Hộ</p>
                </div>

                <div class="col-md-6 template-by">
                    <p>Sản Phẩm Được Cung Cấp Bởi <a href="/">ESHOP</a></p>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer Bottom End -->
    <!-- Back to Top -->
    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="/Client/lib/easing/easing.min.js"></script>
    <script src="/Client/lib/slick/slick.min.js"></script>
    <script src="/Client/js/site.js"></script>
    <!-- Template Javascript -->
    <script src="/Client/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        var site = new SiteController();
        site.initialize();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>