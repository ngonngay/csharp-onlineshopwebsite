@{ ViewData["Title"] = "Home Page"; }
@model HomeViewModel
@section Css{ 
    <link href="~/Client/css/indexpage.css" rel="stylesheet" />
}

<!-- Main Slider Start -->
<div class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-9">
                <div class="header-slider normal-slider">
                    <div class="header-slider-item">
                        <img src="/Client/img/slider-1.jpg" alt="Slider Image" style="width:100%;max-height:400px"/>

                    </div>
                    <div class="header-slider-item">
                        <img src="/Client/img/slider-2.jpg" alt="Slider Image" style="width:100%;max-height:400px"/>

                    </div>
                    <div class="header-slider-item">
                        <img src="/Client/img/slider-3.jpg" alt="Slider Image" style="width:100%;max-height:400px"/>

                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="header-img">
                    <div class="img-item">
                        <img src="/Client/img/category-1.jpg" />
                        <a class="img-text" href="">
                            <p>Sang trọng cá tính</p>
                        </a>
                    </div>
                    <div class="img-item">
                        <img src="/Client/img/category-2.jpg" />
                        <a class="img-text" href="">
                            <p>Trẻ trung năng động</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Main Slider End -->
<!-- Brand Start -->
<div class="brand">
    <div class="container-fluid">
        <div class="brand-slider">
            <div class="brand-item"><img src="/Client/img/brand-1.png" alt=""></div>
            <div class="brand-item"><img src="/Client/img/brand-2.png" alt=""></div>
            <div class="brand-item"><img src="/Client/img/brand-3.png" alt=""></div>
            <div class="brand-item"><img src="/Client/img/brand-4.png" alt=""></div>
            <div class="brand-item"><img src="/Client/img/brand-5.png" alt=""></div>
            <div class="brand-item"><img src="/Client/img/brand-6.png" alt=""></div>
        </div>
    </div>
</div>
<!-- Brand End -->
<!-- Feature Start-->
<div class="feature">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-6 feature-col">
                <div class="feature-content">
                    <i class="fab fa-cc-mastercard"></i>
                    <h2>Thanh toán an toàn </h2>
                    <p>
                        Thanh toán khi nhận hàng
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 feature-col">
                <div class="feature-content">
                    <i class="fa fa-truck"></i>
                    <h2>Giao hàng nhanh chóng</h2>
                    <p>
                        Giao hàng trên toàn quốc
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 feature-col">
                <div class="feature-content">
                    <i class="fa fa-sync-alt"></i>
                    <h2>Bảo hành sản phẩm</h2>
                    <p>
                        Cam kết đổi trả khi sản phẩm bị lỗi
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 feature-col">
                <div class="feature-content">
                    <i class="fa fa-comments"></i>
                    <h2>Hỗ trợ 24/7</h2>
                    <p>
                        Đội ngũ nhân viên luôn hỗ trợ nhiệt tình
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Feature End-->
<!-- Category Start-->
<div class="category">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="category-item ch-400">
                    <img src="/Client/img/category-3.jpg" />
                    <a class="category-name" href="">
                        <p>Thời trang cặp đôi</p>
                    </a>
                </div>
            </div>
            <div class="col-md-3">
                <div class="category-item ch-250">
                    <img src="/Client/img/category-4.jpg" />
                    <a class="category-name" href="">
                        <p>Cá tính nét riêng</p>
                    </a>
                </div>
                <div class="category-item ch-150">
                    <img src="/Client/img/category-5.jpg" />
                    <a class="category-name" href="">
                        <p>Phụ kiện thời trang</p>
                    </a>
                </div>
            </div>
            <div class="col-md-3">
                <div class="category-item ch-150">
                    <img src="/Client/img/category-6.jpg" />
                    <a class="category-name" href="">
                        <p>Mỹ phẩm nổi tiếng</p>
                    </a>
                </div>
                <div class="category-item ch-250">
                    <img src="/Client/img/category-7.jpg" />
                    <a class="category-name" href="">
                        <p>Sản phẩm công nghệ</p>
                    </a>
                </div>
            </div>
            <div class="col-md-3">
                <div class="category-item ch-400">
                    <img src="/Client/img/category-8.jpg" />
                    <a class="category-name" href="">
                        <p>Sang trọng quý phái</p>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Category End-->
<!-- Call to Action Start -->
<div class="call-to-action">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1>Hãy Gọi Cho Chúng Tôi </h1>
            </div>
            <div class="col-md-6">
                <a href="tel:0333020842"> 0333-020-842</a>
            </div>
        </div>
    </div>
</div>
<!-- Call to Action End -->
<!-- Featured Product Start -->
<div class="featured-product product">
    <div class="container-fluid">
        <div class="section-header">
            <h3>Sản Phẩm Nổi Bật</h3>
        </div>
        <div class="row align-items-center product-slider product-slider-4">
            @foreach (var item in Model.FeaturedProducts)
            {

                <div class="col-lg-3">
                    <div class="product-item">
                        <div class="product-title">
                            <a asp-action="ProductDetail" asp-controller="HomePage" asp-route-id="@item.Id">@item.Name</a>
                            <div class="ratting">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                        </div>
                        <div class="product-image">
                            <a asp-action="ProductDetail" asp-controller="HomePage" asp-route-id="@item.Id">
                                <img src="@item.ThumbnailImage" alt="Product Image">
                            </a>
                            <div class="product-action">
                                <a class="icon-add-cart" data-id="@item.Id" title="Thêm vào giỏ hàng"><i class="fa fa-cart-plus"></i></a>
                                <a asp-action="ProductDetail" asp-controller="HomePage" asp-route-id="@item.Id"><i class="fa fa-info-circle"></i></a>
                            </div>
                        </div>
                        <div class="product-price">
                            <h3>@item.price</h3>
                            
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>
<!-- Featured Product End -->
<!-- Newsletter Start -->
<div class="newsletter">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <h1>Đăng Kí</h1>
            </div>
            <div class="col-md-6">
                <div class="form">
                    <input type="email" value="Nhập email của bạn">
                    <button style="font-size:12px" disabled>Đăng kí</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Newsletter End -->
<!-- Recent Product Start -->
<div class="recent-product product">
    <div class="container-fluid">
        <div class="section-header">
            <h3>Sản Phẩm Mới</h3>
        </div>
        <div class="row align-items-center product-slider product-slider-4">
            @foreach (var item in Model.LatestProducts)
            {

                <div class="col-lg-3">
                    <div class="product-item">
                        <div class="product-title">
                            <a asp-action="ProductDetail" asp-controller="HomePage" asp-route-id="@item.Id">@item.Name</a>
                            <div class="ratting">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                        </div>
                        <div class="product-image">
                            <a asp-action="ProductDetail" asp-controller="HomePage" asp-route-id="@item.Id">
                                <img src="@item.ThumbnailImage" alt="Product Image">
                            </a>
                            <div class="product-action">
                                <a class="icon-add-cart"data-id="@item.Id"  title="Thêm vào giỏ hàng"><i class="fa fa-cart-plus"></i></a>
                                <a asp-action="ProductDetail" asp-controller="HomePage" asp-route-id="@item.Id"><i class="fa fa-info-circle"></i></a>
                                
                            </div>
                        </div>
                        <div class="product-price">
                            <h3>@item.price</h3>
                           
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Recent Product End -->
